<form method="post">
    <input type="hidden" value="{{ article.id }}" name="id">
    <input type="text" value="{{ article.title }}" name="title">
    <input type="text" value="{{ article.description }}" name="description">
    <input type="text" value="{{ article.price }}" name="price">
    <input type="text" value="{{ article.hours }}" name="hours">
    <input type="text" value="{{ article.image }}" name="image">
    <select name="categorie_id" id="categorie_id">
        <option value="0">Sélectionner une catégorie</option>
        {% for categorie in categories %}
        <option value="{{categorie.id}}">{{categorie.name}}</option>
        {% endfor %}
    </select>
    <input type="submit" value="Valider">
</form>
