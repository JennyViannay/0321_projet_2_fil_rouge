{% extends 'layout.html.twig' %}

{% block content %}
<div class="container">
    <h1 class="text-center">Formations</h1>
    <div class="row mt-5">
        {% for article in articles %}
        <div class="col-lg-4 col-md-4 col-xs-12 my-3">
            <div class="card">
                <img src="{{article.image}}" class="card-img-top" alt="{{article.title}}">
                <div class="card-body">
                    <h5 class="card-title">{{article.title}}</h5>
                    <p class="card-text text-start">{{article.description}}</p>
                </div>
                <div class="card-footer text-center">
                    <a href="#" class="btn btn-primary">Show</a>
                    <a href="/ajax/addToCart/{{article.id}}" class="btn btn-success js-cart">Add To Cart</a>
                    <a href="/ajax/like/{{article.id}}" class="btn btn-secondary js-like">Add to favorite</a>
                </div>
            </div>
        </div>
        {% endfor %}
        <p id="message"></p>
    </div>
</div>

{% endblock %}

{% block javascript %}
<script>
    const message = document.getElementById('message');
    const linksLike = document.querySelectorAll('a.js-like');
    linksLike.forEach(link => {
        link.addEventListener('click', event => {
            event.preventDefault();
            axios.get(link.href)
            .then(response => response.data)
            .then(data => data ? alert('Ok') : alert('KO'));
        })
    })
    const linksCart= document.querySelectorAll('a.js-cart');
    linksCart.forEach(link => {
        link.addEventListener('click', event => {
            event.preventDefault();
            axios.get(link.href)
            .then(response => response.data)
            .then(data => 
                message.innerHTML = "L'article a été ajouté au panier !"
            );
        })
    })
</script>
{% endblock %}