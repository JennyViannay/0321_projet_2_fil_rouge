{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Categories</h1>
    <ul>
        {% for categorie in categories %}
            <li><a href="/categorie/show/{{ categorie.id }}">{{ categorie.id }}. {{ categorie.name }}</a></li>
        {% else %}
            <li>Nothing to display</li>
        {% endfor %}
    </ul>
    <a href="/categorie/add">Ajouter</a>
{% endblock %}
